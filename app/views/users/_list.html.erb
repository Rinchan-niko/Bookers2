<div>
  <h3>User info</h3>
  <% if user == current_user %>
    <%= image_tag user.get_profile_image(100,100) %>
    <h3><%= user.name %></h3>
    <h3><%= user.introduction %></h3>
    <p><%= link_to "プロフィール編集", edit_user_path(user.id) %></p>
  <% else %>
    <%= image_tag user.get_profile_image(100,100) %>
    <h3><%= user.name %></h3>
    <h3><%= user.introduction %></h3>
    <p><%= link_to "プロフィール編集", user_path(current_user.id) %></p>
  <% end %>
</div>

<h1>New book</h1>
  <%= form_with model: book do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>